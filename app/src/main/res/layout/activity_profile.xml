<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_my_profile"
            android:background="@color/blue"
            android:padding="20dp" >


            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/iv_my_profile_photo"
                android:src="@drawable/profile"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_my_profile_name"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:fontFamily="sans-serif-black"
                android:layout_below="@id/iv_my_profile_photo"
                android:gravity="center"
                android:layout_marginTop="30dp">

            </TextView>


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/iv_icon_edit"
                android:src="@drawable/icon_edit"
                android:layout_alignParentRight="true"

                ></ImageView>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile Number"
            android:id="@+id/tv_my_profile_mobileno"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_below="@+id/rl_my_profile"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="16dp"

            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="987654321"
            android:id="@+id/tv_my_profile_mobileno_input"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_below="@+id/tv_my_profile_mobileno"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp">

        </TextView>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email id"
            android:id="@+id/tv_my_profile_email_id"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_below="@+id/tv_my_profile_mobileno_input"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="16dp"

            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="xyz@gmail.com"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_below="@+id/tv_my_profile_email_id"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp">

        </TextView>











    </RelativeLayout>

</ScrollView>