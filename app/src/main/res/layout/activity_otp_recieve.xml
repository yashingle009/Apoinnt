<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Otpverify"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/otp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OTP has been sent to your number"
        android:fontFamily="@font/montserrat_alternates_light"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/yournumber"
        android:fontFamily="@font/montserrat_alternates_light"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"


        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">
        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/inputotp1"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="LabelFor"
            android:background="@drawable/background_box"
            android:layout_marginRight="5dp"/>
        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/inputotp2"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="LabelFor"
            android:background="@drawable/background_box"
            android:layout_marginRight="5dp"/>
        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/inputotp3"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="LabelFor"
            android:background="@drawable/background_box"
            android:layout_marginRight="5dp"/>
        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/inputotp4"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="LabelFor"
            android:background="@drawable/background_box"
            android:layout_marginRight="5dp"/>
        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/inputotp5"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="LabelFor"
            android:background="@drawable/background_box"
            android:layout_marginRight="5dp"/>
        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/inputotp6"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="LabelFor"
            android:background="@drawable/background_box"
            android:layout_marginRight="5dp"
            />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify"
            android:id="@+id/verifyotp"
            android:layout_margin="30dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:backgroundTint="@color/cyanblue"
            />
        <ProgressBar
            android:id="@+id/progressbar_verify_otp2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:visibility="gone" />
    </FrameLayout>



</LinearLayout>